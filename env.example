# ZerviOS Environment Variables
# Copy this file to .env and fill in appropriate values

# Project settings
NODE_ENV=development
DEBUG=false

# Service ports
MONGODB_PORT=27017
PAYLOAD_PORT=3000
FRONTEND_PORT=3001
REDIS_PORT=6379

# MongoDB
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password_change_me
MONGO_INITDB_DATABASE=zervios

# Payload CMS
PAYLOAD_SECRET=your_secret_key_min_32_chars_change_me
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000
PAYLOAD_SEED=true

# Frontend
NEXT_PUBLIC_PAYLOAD_URL=http://payload:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3001

# Redis
REDIS_PASSWORD=redis_password_change_me